<h2>Tutores de Código Facilito</h2>
<div class="row">
	<section style='text-align:center;' class='span7'>
	<% @tutores.each do |tutor| %>
		<div class="tutor">
			<div class="imagen">
				<%= image_tag tutor.avatar, style: 'width:100px;' %>
			</div>
			<div class="info">
				<p><b><%= tutor.username.capitalize %></b></p>
				<p><b>Vídeos: </b><%= tutor.upload_count %></p>
				<a href="http://www.youtube.com/<%= tutor.username %>">Visita su canal</a>
			</div>
		</div>
	<% end %>
	</section>
	<div class="span6">
		<span class='title'>Inicia hoy uno de sus <h2s>cursos</h2></span>
		<section id="videosHome">
					<% @playlist.videos.each do |video|%>
						<article class="videoHome">
							<a href="/video/<%= video.unique_id %>"><img src="<%= video.thumbnails[1].url %>"></a>
						</article>
					<%end%>
				</section>
	</div>
</div>